{% extends 'EffectiveSolutionsUserBundle:Dashboard:base.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1>User View</h1>
                <div class="panel panel-primary">
                    <table class="table table-bordered table-striped">
                        <tr>
                            <td>Username</td>
                            <th>{{ user.username }}</th>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <th>{{ user.email }}</th>
                        </tr>
                        <tr>
                            <td>Role</td>
                            <th>{{ user.role.name }}</th>
                        </tr>
                        <tr>
                            <td>Status</td>
                            <th>
                                {% if user.isActive %}
                                    <label class="label label-success">Active</label>
                                {% else %}
                                    <label class="label label-danger">Inactive</label>
                                {% endif %}
                            </th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
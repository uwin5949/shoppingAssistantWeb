{% extends 'dashboard/base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-10">
            <div class="box box-primary">
                <div class="box-header">
                    <div class="text-center">
                        <h3>Shop Configure</h3>
                    </div>
                </div>
                <form method="post" enctype="multipart/form-data">
                    {% if errors is not empty %}
                        <div class="alert alert-danger alert-tastyy">
                            <label>{{ errors }}</label>
                        </div>
                    {% endif %}
                    <div class="box-body">
                        {{ form_start(form) }}

                        <div class="row">
                            <div class="col-md-2 col-lg-2 col-xl-2 col-xs-4 hidden-xs" style="padding-right: 70px;padding-top: 5px; padding-bottom: 10px">
                                <h2 class="panel-title" style="margin: 0px !important;">
                                    {{ form_label(form.name) }}
                                </h2>
                            </div>
                            <div class="col-md-5 col-lg-5 col-xl-5 col-xs-4" style="padding-right: 0px; padding-bottom: 10px">
                                <div class="form-group">
                                    {{ form_widget(form.name, { 'attr': {'class': 'form-control','placeholder':'Name'} }) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-2 col-lg-2 col-xl-2 col-xs-4 hidden-xs" style="padding-right: 70px;padding-top: 5px; padding-bottom: 10px">
                                <h2 class="panel-title" style="margin: 0px !important;">
                                    {{ form_label(form.lat) }}
                                </h2>
                            </div>
                            <div class="col-md-5 col-lg-5 col-xl-5 col-xs-4" style="padding-right: 0px; padding-bottom: 10px">
                                <div class="form-group">
                                    {{ form_widget(form.lat, { 'attr': {'class': 'form-control','placeholder':'Latitude'} }) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-2 col-lg-2 col-xl-2 col-xs-4 hidden-xs" style="padding-right: 70px;padding-top: 5px; padding-bottom: 10px">
                                <h2 class="panel-title" style="margin: 0px !important;">
                                    {{ form_label(form.lon) }}
                                </h2>
                            </div>
                            <div class="col-md-5 col-lg-5 col-xl-5 col-xs-4" style="padding-right: 0px; padding-bottom: 10px">
                                <div class="form-group">
                                    {{ form_widget(form.lon, { 'attr': {'class': 'form-control','placeholder':'Longitude'} }) }}
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="box-footer" style="text-align: right">
                        <a class="btn btn-default" href="{{ url('dashboard_home') }}">Cancel</a>
                        {{ form_widget(form.save,{ 'attr': {'class': 'btn btn-success'}}) }}
                        {{ form_end(form) }}
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}